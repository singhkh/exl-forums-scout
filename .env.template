# AEM Scraper Configuration
# Copy this file to '.env' and update with your own settings

# Email Sender Configuration (REQUIRED for email functionality)
AEM_SENDER_EMAIL=rlyexlscout@adobe.com
AEM_SENDER_NAME=AEM Forms Scraper

# Display From address (can be different from sender email)
# Useful for corporate relay servers that modify the From field
AEM_DISPLAY_FROM=rlyexlscout@adobe.com

# Email Recipients Configuration
# Comma-separated list of default recipients (used when no recipient specified on command line)
AEM_DEFAULT_RECIPIENTS=recipient1@example.com,recipient2@example.com
# CC recipients for all emails (optional)
AEM_CC_RECIPIENTS=cc1@example.com,cc2@example.com
# BCC recipients for all emails (optional)
AEM_BCC_RECIPIENTS=bcc1@example.com,bcc2@example.com

# SMTP Server Configuration
AEM_SMTP_SERVER=authrelay.corp.adobe.com
AEM_SMTP_PORT=587
AEM_EMAIL_PASSWORD=your-password-or-app-password

# Set to 'true' to use SSL instead of TLS (changes default port to 465)
AEM_USE_SSL=false

# Scraper defaults
# These can be overridden with command-line arguments
# Default start date (format: YYYY-MM-DD)
AEM_DEFAULT_START_DATE=2023-01-01
# Default maximum number of pages to scrape
AEM_DEFAULT_MAX_PAGES=10 